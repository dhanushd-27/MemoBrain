generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String           @unique @default(uuid())
  username            String           
  email               String           @unique
  password            String  
  refreshToken        String?
  brains              Content[]       
}

model Content {
  admin               User          @relation(fields: [adminId], references: [id])     
  adminId             String
  id                  Int           @unique  @default(autoincrement())
  type                String        
  url                 String        @unique
  title               String
  tags                String[]
  share               Boolean       @default(false)
}